---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Eric Alex - A Creative Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QMWDY8P9GQ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-QMWDY8P9GQ');
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="top-bar">
      <p>Website in Development</p>
    </div>

    <header class="main-header">
      <div class="logo">
        <a href="/">Eric Alex</a>
      </div>
      <nav class="main-nav">
        <a href="/" class="nav-link">HOME</a>
        <a href="/work" class="nav-link">WORK</a>
        <a href="/projects" class="nav-link">PROJECTS</a>
        <a href="/creatives" class="nav-link">CREATIVES</a>
        <a href="#" class="nav-link">SHOP</a>
      </nav>
      <div class="menu-icon" id="menuIcon">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M4 6H20M4 12H20M4 18H20"
            stroke="white"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
    </header>

    <div class="mobile-menu" id="mobileMenu">
      <div class="mobile-menu-header">
        <div class="logo">
          <a href="/">Eric Alex</a>
        </div>
        <div class="mobile-menu-close" id="menuClose">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M18 6L6 18M6 6L18 18"
              stroke="white"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
      </div>
      <nav class="mobile-menu-nav">
        <a href="/" class="nav-link">HOME</a>
        <a href="/work" class="nav-link">WORK</a>
        <a href="/projects" class="nav-link">PROJECTS</a>
        <a href="/creatives" class="nav-link">CREATIVES</a>
        <a href="#" class="nav-link">SHOP</a>
      </nav>
    </div>

    <slot />

    <footer class="main-footer">
      <div class="footer-column">
        <h4>Eric Alex</h4>
        <p>Made by Eric Alex</p>
      </div>
      <div class="footer-column">
        <h4>Let's Work Together</h4>
        <p>eric14alex@gmail.com</p>
      </div>

    </footer>
  </body>
</html>

<style is:global>
  :root {
    --background-color: #1a1a1a;
    --text-color: #e0e0e0;
    --light-text-color: #a0a0a0;
    --border-color: #333333;
  }
  html {
    font-family: "Inter", sans-serif;
    background: var(--background-color);
    color: var(--text-color);
  }
  body {
    margin: 0;
    padding: 0;
    font-size: 14px;
  }
  * {
    box-sizing: border-box;
  }
  a {
    text-decoration: none;
    color: inherit;
  }
</style>

<style>
  /* ================================== */
  /* TOP BAR STYLES */
  /* ================================== */
  .top-bar {
    background-color: var(--border-color);
    color: var(--light-text-color);
    text-align: center;
    padding: 0.5rem 2.5rem;
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .top-bar p {
    margin: 0;
  }

  /* ================================== */
  /* HEADER STYLES */
  /* ================================== */
  .main-header {
    display: flex;
    align-items: center;
    padding: 1.5rem 2.5rem;
    border-bottom: 1px solid var(--border-color);
    width: 100%;
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: rgba(26, 26, 26, 0.8);
    backdrop-filter: blur(5px);
  }
  .logo {
    font-weight: 500;
    font-size: 1.2rem;
    color: var(--text-color);
  }
  .main-nav {
    display: flex;
    gap: 1.5rem;
    margin-left: auto;
  }
  .nav-link {
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    font-weight: 500;
    color: var(--light-text-color);
    transition: color 0.3s;
  }
  .nav-link:hover {
    color: var(--text-color);
  }

  /* **CRITICAL FIX 1**: Hide hamburger icon by default */
  .menu-icon {
    display: none; 
    cursor: pointer;
  }

  /* ================================== */
  /* **NEW** MOBILE MENU STYLES */
  /* ================================== */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--background-color);
    z-index: 100;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    
    /* **CRITICAL FIX 2**: Hide menu off-screen by default */
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
  }

  /* This class is added by JavaScript */
  .mobile-menu.is-open {
    transform: translateX(0); /* Slide in */
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.5rem; /* Adjusted padding */
    border-bottom: 1px solid var(--border-color);
  }

  .mobile-menu-close {
    cursor: pointer;
  }

  .mobile-menu-nav {
    display: flex;
    flex-direction: column; /* Stack links vertically */
    align-items: center;
    justify-content: center;
    flex-grow: 1; 
    gap: 1rem;
  }

  .mobile-menu-nav .nav-link {
    font-size: 1.2rem; /* Bigger links for mobile */
    letter-spacing: 0.05em;
  }

  /* ================================== */
  /* FOOTER STYLES */
  /* ================================== */
  .main-footer {
    display: flex;
    justify-content: space-between;
    padding: 1.5rem 2.5rem;
    border-top: 1px solid var(--border-color);
    margin-top: auto;
  }
  .footer-column {
    flex-basis: 10%;
  }
  .footer-column h4 {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-color);
  }
  .footer-column p {
    margin: 0;
    color: var(--light-text-color);
    font-size: 0.85rem;
  }
  .social-links {
    display: flex;
    gap: 0.8rem;
    color: var(--light-text-color);
    font-size: 0.85rem;
  }
  .social-links a:hover {
    color: var(--text-color);
  }

  /* ================================== */
  /* MEDIA QUERIES (Updated) */
  /* ================================== */

  @media (max-width: 1024px) {
    /* **CRITICAL FIX 3**: Hide desktop nav */
    .main-nav {
      display: none; 
    }
    /* **CRITICAL FIX 4**: Show hamburger icon and push to right */
    .menu-icon {
      display: block; 
      margin-left: auto;
    }
  }

  @media (max-width: 768px) {
    .main-header {
      padding: 1rem;
    }
    .main-footer {
      padding: 1.5rem 1rem; 
      justify-content: center; /* Center footer content */
    }
    .top-bar {
      padding: 0.5rem 1rem;
    }
    .footer-column {
      display: none;
    }
    .footer-column:first-child {
      display: block;
      text-align: center; /* Center footer text */
      flex-basis: auto; 
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Get all the elements
    const menuIcon = document.getElementById('menuIcon');
    const mobileMenu = document.getElementById('mobileMenu');
    const menuClose = document.getElementById('menuClose');
    const navLinks = mobileMenu.querySelectorAll('.nav-link');

    // Function to open the menu
    function openMenu() {
      if (mobileMenu) {
        mobileMenu.classList.add('is-open');
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
      }
    }

    // Function to close the menu
    function closeMenu() {
      if (mobileMenu) {
        mobileMenu.classList.remove('is-open');
        document.body.style.overflow = 'auto'; // Re-enable scrolling
      }
    }

    // Event Listeners
    if (menuIcon) {
      menuIcon.addEventListener('click', openMenu);
    }

    if (menuClose) {
      menuClose.addEventListener('click', closeMenu);
    }

    // Close menu when a nav link is clicked
    navLinks.forEach((link) => {
      link.addEventListener('click', closeMenu);
    });
  });
</script>