---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Eric Alex | Creatives">
  <main>
    <section class="creatives-hero" id="creativesHero">

      <div class="spotlight-overlay" id="spotlightOverlay"></div>

      <div class="hero-content">
        <h1>
          <span class="gradient-text">Showcasing my talent</span>
          <span class="gradient-text">and passion</span>
        </h1>
        <p class="hero-subtitle">How I Combine design and technology</p>

        <div class="hero-buttons">
          <a href="/photos" class="hero-button">Photography</a>
          <a href="/videos" class="hero-button">Videography</a>
          <a href="/graphic-design" class="hero-button">Graphic Design</a>
        </div>
      </div>

      <a href="#" class="see-full-image" id="openPopup">see full image</a>
      
    </section>

    <div class="image-popup" id="imagePopup">
      <div class="popup-close" id="closePopup">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 6L6 18"></path><path d="M6 6L18 18"></path>
        </svg>
      </div>
      <img src="/assets/creatvies.jpg" alt="Full creative background" class="popup-image" />
    </div>

  </main>
</Layout>

<style>
  .creatives-hero {
    height: calc(100vh - 100px); 
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    
    background-image: url('/assets/creatvies.jpg');
    background-size: cover;
    background-position: center;
  }

  /* ================================== */
  /* OVERLAY & SPOTLIGHT EFFECT         */
  /* ================================== */
  .spotlight-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    
    /* MODIFIED: Background is now set by JavaScript */
    /* By default, it will be solid dark */
  }


  /* ================================== */
  /* FOREGROUND CONTENT (MODIFIED)      */
  /* ================================== */
  .hero-content {
    position: relative;
    z-index: 2; /* Sits on top of the dark overlay */

    /* ADDED: These lines center the content vertically */
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .creatives-hero h1 {
    font-size: 4.5rem;
    font-weight: 500;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    display: flex;
    flex-direction: column;
  }

  .gradient-text {
    background: linear-gradient(to bottom, #FFFFFF, #A0A0A0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--light-text-color);
    margin: 0;
    font-weight: 400;
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    margin-top: 3rem; 
    /* This is no longer needed as parent centers it
    justify-content: center; 
    */
  }

  .hero-button {
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-color);
    border: 1px solid var(--border-color);
    padding: 0.75rem 2rem;
    border-radius: 30px; 
    text-decoration: none;
    transition: all 0.3s ease;
    
    background-color: rgba(40, 40, 40, 0.4);
    backdrop-filter: blur(4px);
  }

  .hero-button:hover {
    background-color: var(--text-color);
    color: var(--background-color);
    border-color: var(--text-color);
  }

  /* ================================== */
  /* "SEE FULL IMAGE" LINK              */
  /* ================================== */
  .see-full-image {
    position: absolute;
    bottom: 2rem;
    right: 2.5rem;
    z-index: 2; /* On top of overlay */
    font-size: 0.9rem;
    color: var(--light-text-color);
    text-decoration: underline;
    text-underline-offset: 4px;
    cursor: pointer;
    transition: color 0.3s ease;
  }
  .see-full-image:hover {
    color: var(--text-color);
  }

  /* ================================== */
  /* POPUP / MODAL STYLES               */
  /* ================================== */
  .image-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    backdrop-filter: blur(10px);
    display: none; 
    align-items: center;
    justify-content: center;
    z-index: 100;
  }

  .image-popup.is-open {
    display: flex; /* Show the popup */
  }

  .popup-close {
    position: absolute;
    top: 2rem;
    right: 2.5rem;
    color: white;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  .popup-close:hover {
    opacity: 1;
  }
  
  .popup-image {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    border-radius: 10px;
    border: 1px solid var(--border-color);
  }


  /* ================================== */
  /* MOBILE STYLES                      */
  /* ================================== */
  @media (max-width: 768px) {
    .spotlight-overlay {
      background: rgba(26, 26, 26, 0.8); /* Just a dark overlay on mobile */
    }

    .creatives-hero h1 {
      font-size: 2.8rem;
    }
    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-buttons {
      flex-direction: column;
      gap: 1rem;
      width: 80%; 
      max-width: 300px;
    }

    .hero-button {
      width: 100%;
    }

    .see-full-image {
      bottom: 2rem;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hero = document.getElementById('creativesHero');
    const spotlight = document.getElementById('spotlightOverlay');
    const openBtn = document.getElementById('openPopup');
    const closeBtn = document.getElementById('closePopup');
    const popup = document.getElementById('imagePopup');

    // Get the computed background color from CSS
    const darkBG = 'rgba(26, 26, 26, 1)';

    // 1. Set the initial state (solid dark overlay)
    spotlight.style.background = darkBG;

    // 2. Spotlight Effect
    hero.addEventListener('mousemove', (e) => {
      // Check if it's a touch event (we'll ignore those)
      if (e.pointerType === 'touch') {
        return;
      }
      
      const rect = hero.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      // Update the gradient on move
      spotlight.style.background = `radial-gradient(
        ellipse 220px 150px at ${x}px ${y}px,  /* MODIFIED: More playful ellipse */
        transparent 0%,
        ${darkBG} 100%
      )`;
    });
    
    // Reset on mouse leave
    hero.addEventListener('mouseleave', () => {
      spotlight.style.background = darkBG;
    });

    // 3. Popup Logic
    openBtn.addEventListener('click', (e) => {
      e.preventDefault(); 
      popup.classList.add('is-open');
      document.body.style.overflow = 'hidden';
    });

    closeBtn.addEventListener('click', () => {
      popup.classList.remove('is-open');
      document.body.style.overflow = 'auto';
    });
    
    popup.addEventListener('click', (e) => {
      if (e.target === popup) {
        popup.classList.remove('is-open');
        document.body.style.overflow = 'auto';
      }
    });

  });
</script>