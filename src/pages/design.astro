---
import Layout from "../layouts/Layout.astro";

// --- YOUR PHOTOS ---
// Just add the paths to your images here.
// Make sure to put your images in the `public/assets/photos/` folder.
const photos = [
  { id: "img1", src: "/assets/poster1.png", alt: "Description of photo 1" },
  { id: "img2", src: "/assets/poster2.png", alt: "Description of photo 1" },
  { id: "img3", src: "/assets/poster3.png", alt: "Description of photo 1" },
  { id: "img4", src: "/assets/poster4.png", alt: "Description of photo 1" },
  { id: "img5", src: "/assets/poster5.jpg", alt: "Description of photo 1" },
  { id: "img6", src: "/assets/poster7.jpg", alt: "Description of photo 1" },
  { id: "img7", src: "/assets/poster8.jpg", alt: "Description of photo 1" },
  { id: "img8", src: "/assets/poster10.jpg", alt: "Description of photo 1" },
];
---

<Layout title="Eric Alex | Designs">
  <main class="photo-page">
    <div class="page-header">
      <p class="section-label">Creatives</p>
      <h1 class="page-title">Designs</h1>
    </div>

    <div class="photo-grid">
      {photos.map(photo => (
        <div class="photo-item">
          <a href={`#${photo.id}`}>
            <img src={photo.src} alt={photo.alt} loading="lazy" />
          </a>
        </div>
      ))}
    </div>
  </main>

  {photos.map(photo => (
    <a href="#_" class="lightbox" id={photo.id}>
      <img src={photo.src} alt={photo.alt} />
    </a>
  ))}
</Layout>

<style>
  .photo-page {
    width: 95%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .page-header {
    text-align: center;
    padding: 2rem 0 4rem 0;
  }

  .section-label {
    font-size: 0.9rem;
    color: var(--light-text-color);
    text-transform: capitalize;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 500;
    color: var(--text-color);
    margin: 0.5rem 0 0 0;
  }

  /* ================================== */
  /* MASONRY PHOTO GRID                 */
  /* ================================== */
  .photo-grid {
    /* This creates the masonry effect */
    column-count: 4;
    column-gap: 1.5rem;
  }

  .photo-item {
    margin: 0 0 1.5rem 0;
    /* This is critical: prevents an image from breaking 
       across two columns */
    break-inside: avoid;
  }

  .photo-item a {
    display: block;
    line-height: 0; /* Removes any bottom spacing */
  }

  .photo-item img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .photo-item img:hover {
    opacity: 0.8;
    transform: scale(1.02);
    border-color: #777;
  }

  /* ================================== */
  /* CSS-ONLY LIGHTBOX                  */
  /* ================================== */
  .lightbox {
    /* Hidden by default */
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    
    /* Backdrop */
    background-color: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
    
    /* Centering the image */
    justify-content: center;
    align-items: center;
  }

  .lightbox:target {
    /* Show the lightbox when the URL hash matches its ID */
    display: flex;
  }

  .lightbox img {
    max-width: 90%;
    max-height: 90%;
    border-radius: 10px;
    border: 2px solid var(--border-color);
  }

  /* ================================== */
  /* MOBILE STYLES                      */
  /* ================================== */
  @media (max-width: 768px) {
    .photo-grid {
      column-count: 2; /* 2 columns on tablet/mobile */
      column-gap: 1rem;
    }
    
    .photo-item {
      margin-bottom: 1rem;
    }
    
    .page-title {
      font-size: 2.8rem;
    }
    
    .page-header {
      padding: 1rem 0 3rem 0;
    }
  }
</style>