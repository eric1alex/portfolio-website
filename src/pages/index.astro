---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Eric Alex | Home">
  <div class="fullscreen-hero">
    
    <header class="main-header">
      <div class="logo">
        <a href="#">Eric Alex</a>
      </div>
      <nav class="main-nav">
        <a href="#" class="nav-link">HOME</a>
        <a href="#" class="nav-link">PROFESSIONAL WORK</a>
        <a href="#" class="nav-link">PERSONAL WORK</a>
        <a href="#" class="nav-link">CREATIVES</a>
        <a href="#" class="nav-link">SHOP</a>
      </nav>
      <div class="menu-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4 6H20M4 12H20M4 18H20" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
      </div>
    </header>

    <main class="hero-content">
      <div class="image-wrapper">
        <img 
          src="/assets/hero-image.jpg" 
          class="hero-image"
        />
      </div>
      <div class="slider-nav">
        <span class="dot active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>
    </main>

    <footer class="main-footer">
      <div class="footer-column">
        <h4>Eric Alex</h4>
        <p>Made by Eric Alex</p>
      </div>
      <div class="footer-column">
        <h4>Let's Work Together</h4>
        <p>eric14alex@gmail.com</p>
      </div>
      <div class="footer-column">
        <h4>You can follow us</h4>
        <div class="social-links">
          <a href="#">Fb.</a>
          <a href="#">Tw.</a>
          <a href="#">In.</a>
          <a href="#">Be.</a>
        </div>
      </div>
    </footer>
    
  </div>
</Layout>

<style>
  /* This is the key to the non-scrolling layout */
  .fullscreen-hero {
    display: flex;
    flex-direction: column;
    height: 100vh; /* 100% of the viewport height */
    width: 100vw; /* 100% of the viewport width */
    overflow: hidden; /* Prevents any accidental scrolling */
    background-color: var(--background-color);
  }

  /* Header Styling */
  .main-header {
    display: flex;
    align-items: center;
    padding: 1.5rem 2.5rem;
    border-bottom: 1px solid var(--border-color);
    flex-shrink: 0; /* Prevents header from shrinking */
  }

  .logo {
    font-weight: 500;
    font-size: 1.2rem;
    color: var(--text-color); /* Ensure logo is visible */
  }

  .main-nav {
    display: flex;
    gap: 1.5rem;
    margin-left: auto; /* Pushes nav to the right */
  }

  .nav-link {
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    font-weight: 500;
    color: var(--light-text-color); /* Light grey for nav links */
    transition: color 0.3s;
  }
  .nav-link:hover {
    color: var(--text-color); /* White on hover */
  }

  .menu-icon {
    margin-left: 2rem;
    cursor: pointer;
  }

  /* Main Content (Image) Styling */
  .hero-content {
    flex-grow: 1; /* This makes the main area fill all available space */
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }

  .image-wrapper {
    width: 100%;
    height: 100%;
    max-width: 1200px; /* Controls the max width of the image */
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image covers the area without distortion */
  }

  .slider-nav {
    position: absolute;
    right: 2.5rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .slider-nav .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--border-color); /* Darker dot */
    cursor: pointer;
  }

  .slider-nav .dot.active {
    background-color: var(--text-color); /* White for active dot */
  }


  /* Footer Styling */
  .main-footer {
    display: flex;
    justify-content: space-between;
    padding: 1.5rem 2.5rem;
    border-top: 1px solid var(--border-color);
    flex-shrink: 0; /* Prevents footer from shrinking */
  }

  .footer-column {
    flex-basis: 22%; /* Distribute space among 4 columns */
  }

  .footer-column h4 {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-color); /* Ensure footer headings are light */
  }

  .footer-column p {
    margin: 0;
    color: var(--light-text-color); /* Light grey for footer text */
    font-size: 0.85rem;
  }

  .social-links {
    display: flex;
    gap: 0.8rem;
    color: var(--light-text-color); /* Light grey for social links */
    font-size: 0.85rem;
  }
  .social-links a:hover {
    color: var(--text-color); /* White on hover */
  }

  /* Responsive Adjustments */
  @media (max-width: 1024px) {
    .main-nav {
      display: none; /* Hide nav links on smaller screens, rely on menu icon */
    }
  }
  @media (max-width: 768px) {
    .main-header, .main-footer {
        padding: 1rem;
    }
    .footer-column {
        display: none; /* Hide footer columns on small screens */
    }
    .footer-column:first-child {
        display: block; /* Show only the first column */
    }
    .slider-nav {
      right: 1rem; /* Adjust slider position for smaller screens */
    }
  }

</style>