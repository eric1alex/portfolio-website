---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Eric Alex | Home">
  <main>
    <section class="hero-section">
      <div class="slideshow-container">
        <div class="slide-text" id="slideText"></div>
      </div>
    </section>

    <section class="content-section">
      <h2>Your content starts here.</h2>
      <p>This is where you can add more sections and information to your website.</p>
    </section>
  </main>
</Layout>

<script>
  // Define slides for both desktop and mobile
  const slidesDesktop = [
    { image: "/assets/hero1.png", title: "Roads of Munnar" },
    { image: "/assets/hero2.png", title: "The Sunset at Goa" },
    { image: "/assets/hero3.png", title: "Our Latest SAAS Project" },
  ];

  const slidesMobile = [
    { image: "/assets/mobile1.jpg", title: "Roads of Munnar" },
    { image: "/assets/mobile1.jpg", title: "The Sunset at Goa" },
    { image: "/assets/mobile1.jpg", title: "Our Latest SAAS Project" },
  ];

  // Check if device is mobile
  const isMobile = window.innerWidth <= 768;
  const slides = isMobile ? slidesMobile : slidesDesktop;

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector(".slideshow-container") as HTMLDivElement;
    const textBox = document.getElementById("slideText");

    if (container && textBox) {
      let currentIndex = 0;

      // Function to show a specific slide
      function showSlide(index: number): void {
        const { image, title } = slides[index];
        container.style.backgroundImage = `url('${image}')`;
        textBox.textContent = title;
      }

      // Initial slide
      showSlide(currentIndex);

      // Automatically switch slides every 4 seconds
      const slideInterval = setInterval(() => {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
      }, 4000);
    }
  });
</script>
</script>

<style>
  .hero-section {
    width: 100%;
    padding: 2rem 0;
    background-color: var(--background-color);
  }

  /* Main slideshow box */
  .slideshow-container {
    position: relative;
    width: 80%;
    height: 80vh;
    margin: 0 auto;
    background-color: black;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    border: 6px solid #333333;
    border-radius: 16px;
    overflow: hidden;
    transition: background-image 1s ease-in-out;
  }

  /* Caption box */
  .slide-text {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    background: rgba(26, 26, 26, 0.8);
    color: var(--text-color);
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    font-size: 1.2rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.5px;
    backdrop-filter: blur(5px);
  }

  /* Content section styling */
  .content-section {
    padding: 6rem 2.5rem;
    text-align: center;
    background-color: var(--background-color);
    min-height: 50vh;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .slideshow-container {
      width: 90%;
      height: 60vh;
      border-width: 4px;
    }
    .slide-text {
      font-size: 1rem;
      padding: 0.5rem 1rem;
      bottom: 0.8rem;
      right: 0.8rem;
    }
  }
</style>
</style>
