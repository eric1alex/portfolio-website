<script>
  // Define slides for both desktop and mobile
  const slidesDesktop = [
    { image: "/assets/hero1.png", title: "Roads of Munnar" },
    { image: "/assets/hero2.png", title: "The Sunset at Goa" },
    { image: "/assets/hero3.png", title: "Our Latest SAAS Project" },
  ];

  const slidesMobile = [
    { image: "/assets/mobile1.jpg", title: "Roads of Munnar" },
    { image: "/assets/mobile1.jpg", title: "The Sunset at Goa" },
    { image: "/assets/mobile1.jpg", title: "Our Latest SAAS Project" },
  ];

  // Check if device is mobile
  const isMobile = window.innerWidth <= 768;
  const slides = isMobile ? slidesMobile : slidesDesktop;

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector(".slideshow-container") as HTMLDivElement;
    const textBox = document.getElementById("slideText");

    if (container && textBox) {
      let currentIndex = 0;

      // Function to show a specific slide
      function showSlide(index: number): void {
        const { image, title } = slides[index];
        container.style.backgroundImage = `url('${image}')`;
        textBox.textContent = title;
      }

      // Initial slide
      showSlide(currentIndex);

      // Automatically switch slides every 4 seconds
      const slideInterval = setInterval(() => {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
      }, 6000);
    }
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggles = document.querySelectorAll('.accordion-toggle');
    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const content = toggle.nextElementSibling;
        const isOpen = content.style.maxHeight && content.style.maxHeight !== '0px';

        // Close all
        document.querySelectorAll('.accordion-content').forEach(c => c.style.maxHeight = null);

        if (!isOpen) {
          content.style.maxHeight = content.scrollHeight + 20 + 'px';
        }
      });
    });
  });
</script>


<style>
  .hero-section {
    width: 100%;
    padding: 2rem 0;
    background-color: var(--background-color);
  }

  /* Main slideshow box */
  .slideshow-container {
    position: relative;
    width: 95%;
    height: 80vh;
    margin: 0 auto;
    background-color: black;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center bottom;
    border: 2px solid #333333;
    border-radius: 10px;
    overflow: hidden;
    transition: background-image 2s ease-in-out;
  }

  /* Caption box */
  .slide-text {
    position: absolute;
    bottom: -0.1rem;
    right: 0rem;
    background: rgba(26, 26, 26, 1);
    color: var(--text-color);
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.5px;
  }

  /* Content section styling */
  .content-section {
    padding: 6rem 2rem;
    text-align: center;
    background-color: var(--background-color);
    min-height: 50vh;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .slideshow-container {
      width: 90%;
      height: 80vh;
      border-width: 4px;
    }
    .slide-text {
      font-size: 1rem;
      padding: 0.5rem 1rem;
      bottom: 0rem;
      right: -0.1rem;
    }
  }
.about-accordion {
  width: 90%;
  max-width: 900px;
  margin: 3rem auto;
  font-family: 'Inter', sans-serif;
  overflow: visible;
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: -.5rem;
  font-weight: 700;
  color: var(--text-color);
}

.section-subtitle {
  text-align: center;
  font-size: 1rem;
  margin-bottom: 3rem;
  font-weight: 100;
  color: var(--text-color);
}

/* Accordion item */
.accordion-item {
  background: rgba(241, 227, 227, 0.0);
  backdrop-filter: blur(10px);
  border-radius: 10px;
  margin-bottom: 1rem;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid rgba(255,255,255,0.1);
}

.accordion-toggle {
  width: 100%;
  background: none;
  border: none;
  padding: 1.2rem 1.5rem;
  text-align: left;
  font-size: 1.4rem;
  font-weight: 600;
  color: var(--text-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.accordion-toggle .arrow {
  transition: transform 0.3s ease;
}

/* Rotate arrow when active */
.accordion-item.active .accordion-toggle .arrow {
  transform: rotate(180deg);
}

.accordion-content {
  max-height: 0;
  overflow: hidden;
  padding: 0 2rem;
  transition: max-height 0.4s ease, padding 0.4s ease;
}

.accordion-content p, .accordion-content ul {
  margin: 1rem 0;
  line-height: 1.7;
  font-size: 1rem;
}

.accordion-content ul {
  list-style: disc;
  padding-left: 1.4rem;
}

/* Button */
.btn-link {
  display: inline-block;
  margin-top: 1rem;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  text-decoration: none;
  background-color: rgba(255,255,255,0.1);
  color: var(--text-color);
  font-weight: 500;
  transition: background 0.3s ease, transform 0.3s ease;
}

.btn-link:hover {
  background-color: rgba(255,255,255,0.2);
  transform: scale(1.05);
}

/* Bottom-right button */
.bottom-right-btn {
  text-align: right;
  margin-top: 2rem;
}

/* Mobile adjustments */
@media (max-width: 768px) {
  .accordion-toggle {
    font-size: 1.2rem;
  }
  .section-title {
    font-size: 2rem;
  }
  .accordion-grid {
    grid-template-columns: 1fr; /* stack vertically */
  }
}


</style>

