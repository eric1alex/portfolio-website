---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Eric Alex | Professional Work">
  <main class="work-page">

    <section class="work-hero">
      <h1>Showcasing my talent and passion</h1>
      <div class="hero-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-bulb">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M9 16a5 5 0 1 0 6 0a3.5 3.5 0 0 0 -1 3a2 2 0 0 1 -4 0a3.5 3.5 0 0 0 -1 -3"></path>
          <path d="M9.7 17l4.6 0"></path>
        </svg>
      </div>
    </section>

    <section class="intro-section">
      <p class="hero-subtitle">
        Discover my skills and creativity in action, with just one click.
      </p>
      <p class="current-work-at">
        Currently work at <a href="#" class="company-link">Indiahikes</a>
      </p>
    </section>

    <section class="project-grid-section">
      <div class="project-grid">
        
        <a href="#" class="project-card">
          <img src="/assets/work1.png" alt="Project 1 Thumbnail" />
          <div class="project-info">
            <span>Landing Page</span>
            <span>UI/UX</span>
            <span>View Project &rarr;</span>
          </div>
        </a>
        
        <a href="#" class="project-card">
          <img src="/assets/work2.png" alt="Project 2 Thumbnail" />
          <div class="project-info">
            <span>Web App</span>
            <span>UI/UX</span>
            <span>View Project &rarr;</span>
          </div>
        </a>

        <a href="#" class="project-card">
          <img src="/assets/work3.png" alt="Project 3 Thumbnail" />
          <div class="project-info">
            <span>Mobile App</span>
            <span>UI/UX</span>
            <span>View Project &rarr;</span>
          </div>
        </a>

        <a href="#" class="project-card">
          <img src="/assets/work4.png" alt="Project 4 Thumbnail" />
          <div class="project-info">
            <span>eCommerce</span>
            <span>Shopify</span>
            <span>View Project &rarr;</span>
          </div>
        </a>

      </div>
    </section>
  </main>
</Layout>

<style>
  /* Base page padding */
  .work-page {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    /* We control padding in the sections themselves now */
    padding: 0 2.5rem; 
  }

  /* --- 1. Work Hero (Updated) --- */
  .work-hero {
    text-align: center;
    padding: 6rem 0 1rem 0; /* More top padding, less bottom */
  }

  .work-hero h1 {
    font-size: 3.5rem;
    font-weight: 500;
    color: var(--text-color);
    margin: 0;
    line-height: 1.2;
  }

  .hero-icon {
    padding: 1.5rem 0;
  }
  .hero-icon svg {
    width: 28px;
    height: 28px;
    stroke: var(--text-color);
    opacity: 0.8;
  }

  /* --- 2. Intro Section (New) --- */
  .intro-section {
    text-align: center;
    max-width: 500px;
    margin: 0 auto; /* Center the text block */
    padding: 1rem 0 3rem 0; /* Space above and below */
    border-bottom: 1px solid var(--border-color); /* Separator line */
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--light-text-color);
    margin: 0 auto 1.5rem auto;
    line-height: 1.6;
  }

  .current-work-at {
    font-size: 0.9rem;
    color: var(--light-text-color);
    margin: 0;
  }
  .company-link {
    color: var(--text-color);
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.3s;
  }
  .company-link:hover {
    color: #007bff; /* Example hover color */
  }


  /* --- 3. Project Grid (Unchanged Styles) --- */
  .project-grid-section {
    padding: 4rem 0; /* Space below the separator */
  }
  .project-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  .project-card {
    display: block;
    border: 1px solid var(--border-color);
    border-radius: 10px;
    overflow: hidden;
    background-color: #111;
    transition: border-color 0.3s ease;
  }
  .project-card:hover {
    border-color: #777;
  }
  .project-card img {
    width: 100%;
    height: auto;
    display: block;
    background-color: #000;
    aspect-ratio: 16 / 10;
    object-fit: cover;
  }
  .project-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    background-color: #222; 
    font-size: 0.9rem;
    color: var(--light-text-color);
    border-top: 1px solid var(--border-color);
  }
  .project-info span:last-child {
    color: var(--text-color);
    font-weight: 500;
  }

  /* --- Mobile Styles --- */
  @media (max-width: 768px) {
    .work-page {
      padding: 0 1.5rem;
    }
    .work-hero {
      padding: 4rem 0 0.5rem 0;
    }
    .work-hero h1 {
      font-size: 2.5rem;
    }
    .intro-section {
      padding: 1rem 0 2rem 0;
    }
    .hero-subtitle {
      font-size: 1rem;
    }
    .project-grid-section {
      padding: 3rem 0;
    }
    .project-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .project-info {
      padding: 0.8rem 1rem;
      font-size: 0.8rem;
      flex-wrap: wrap;
    }
  }
</style>