---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Eric Alex | Professional Work">
  <main>
    <section class="work-hero">
      <h1>
        <span class="gradient-text">Showcasing my talent</span>
        <span class="gradient-text">and passion</span>
      </h1>
      <p class="hero-subtitle">How I Combine design and technology</p>
      
      <div class="scroll-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M12 6l0 4" /> <path d="M12 3a4 4 0 0 1 4 4v10a4 4 0 0 1 -8 0v-10a4 4 0 0 1 4 -4z" /> </svg>
      </div>
    </section>

    <section class="project-grid-section">
      <div class="project-grid-header">
        <p class="section-label">selected projects</p>
        <h2 class="section-title">
          Discover my skills and creativity in action, with just one click.
        </h2>
      </div>

      <div class="project-grid">
        <a href="#" class="project-card">
          <img src="/assets/project1-thumb.png" alt="Spacious Living project thumbnail" />
          <div class="project-info">
            <span class="tag">Landing Page</span>
            <span class="tag">UI & Ux</span>
            <span class="view-link">
              View Project
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>

        <a href="#" class="project-card">
          <img src="/assets/project2-thumb.png" alt="Xpense project thumbnail" />
          <div class="project-info">
            <span class="tag">Landing Page</span>
            <span class="tag">UI & Ux</span>
            <span class="view-link">
              View Project
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>
      </div>
    </section>

  </main>
</Layout>

<style>
  /* ================================== */
  /* HERO SECTION STYLES (Unchanged)    */
  /* ================================== */
  .work-hero {
    height: 90vh; 
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    position: relative;
    border-bottom: 1px solid var(--border-color); /* Add separator line */
  }

  .work-hero h1 {
    font-size: 4.5rem;
    font-weight: 500;
    margin: 0 0 2rem 0;
    line-height: 1.2;
    display: flex;
    flex-direction: column;
  }

  .gradient-text {
    background: linear-gradient(to bottom, #FFFFFF, #A0A0A0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--light-text-color);
    margin: 0;
    font-weight: 400;
  }

  .scroll-icon {
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX(-50%);
    color: var(--light-text-color);
    opacity: 0.7;
  }
  
  .scroll-icon svg {
    width: 40px;
    height: 40px;
  }

  /* ================================== */
  /* PROJECT GRID STYLES                */
  /* ================================== */
  .project-grid-section {
    padding: 6rem 2.5rem; /* Padding for the whole section */
  }

  .project-grid-header {
    max-width: 600px; /* Limit width of header text */
    margin-bottom: 4rem;
  }

  .section-label {
    font-size: 0.9rem;
    color: var(--light-text-color);
    margin: 0 0 1rem 0;
    text-transform: capitalize;
    letter-spacing: 0.05em;
  }

  .section-title {
    font-size: 2.8rem;
    font-weight: 500;
    color: var(--text-color);
    line-height: 1.3;
    margin: 0;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 2 columns */
    gap: 2rem;
  }

  .project-card {
    display: block;
    background-color: #222; /* Dark card background */
    border: 1px solid var(--border-color);
    border-radius: 10px;
    overflow: hidden; /* To round the image corners */
    text-decoration: none;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: #555;
  }

  .project-card img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16 / 10;
    object-fit: cover;
    background-color: #333; /* Placeholder for image */
  }

  .project-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.2rem 1.5rem;
    border-top: 1px solid var(--border-color);
  }

  .project-info .tag {
    font-size: 0.85rem; /* Base font size */
    color: var(--light-text-color);
    border: 1px solid var(--border-color);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    white-space: nowrap; /* Prevent text from wrapping */
  }

  .project-info .view-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-color);
    margin-left: auto; /* Pushes it to the right */
  }

  .project-info .view-link svg {
    transition: transform 0.3s ease;
  }

  .project-card:hover .view-link svg {
    transform: translateX(4px);
  }


  /* ================================== */
  /* MOBILE STYLES (Updated)            */
  /* ================================== */
  @media (max-width: 768px) {
    .work-hero h1 {
      font-size: 2.8rem;
    }
    .hero-subtitle {
      font-size: 1rem;
    }

    .project-grid-section {
      padding: 4rem 1.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .project-grid {
      grid-template-columns: 1fr; /* Stack on mobile */
    }

    /* --- FIXES FOR MOBILE TAGS --- */
    .project-info {
      /* Reduce padding inside the info bar */
      padding: 0.8rem 1rem; 
      /* Reduce gap between items */
      gap: 0.75rem; 
      /* Allow items to wrap if needed, but we'll try to prevent it with white-space */
      flex-wrap: wrap; 
    }

    .project-info .tag {
      font-size: 0.75rem; /* Make tags slightly smaller */
      padding: 0.2rem 0.6rem; /* Reduce padding inside tags */
      line-height: 1; /* Ensure text sits nicely */
      white-space: nowrap; /* Ensure text stays on one line */
    }

    .project-info .view-link {
      font-size: 0.8rem; /* Make view link text smaller */
    }
  }
</style>