---
import Layout from "../layouts/Layout.astro";

const workList = [
  { title: "Portfolio Website", link: "/work/portfolio" },
  { title: "SaaS Dashboard", link: "/work/dashboard" },
  { title: "E-commerce Redesign", link: "/work/ecommerce" },
  { title: "The Prompt Lib", link: "/work/prompt-lib" },
  // add more items as needed
];
---
<Layout title="Eric Alex | Work">
  <main>
    <section class="work-hero">
      <div class="work-hero-inner">
        <h1 class="work-title">Work & Experience</h1>
        <p class="work-lead">Selected projects, current role and past experience — clean and focused.</p>
      </div>
    </section>

    <!-- Dashboard row: left = current role, center = divider, right = past experience -->
    <section class="dashboard-section">
      <div class="dashboard">
        <div class="dashboard-left panel">
          <h2 class="panel-title">Current Role</h2>
          <div class="role-block">
            <p class="role-title">Frontend Developer</p>
            <p class="role-company">Freelance / Remote</p>
            <p class="role-time">2023 — Present</p>

            <ul class="role-bullets">
              <li>Design & build responsive websites</li>
              <li>Focus on performance & accessibility</li>
              <li>Lead UI decisions and handoff</li>
            </ul>
          </div>
        </div>

        <div class="dashboard-divider" aria-hidden="true"></div>

        <div class="dashboard-right panel">
          <h2 class="panel-title">Past Experience</h2>
          <ul class="past-list">
            <li><strong>UI Designer</strong> — Pixel Studio <span class="muted">2022 — 2023</span></li>
            <li><strong>Intern Developer</strong> — NovaTech <span class="muted">2021 — 2022</span></li>
            <li><strong>Freelance Projects</strong> — multiple clients <span class="muted">2019 — 2021</span></li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Work list -->
    <section class="work-list-section">
      <h2 class="section-heading">Selected Work</h2>

      <ul class="work-list">
        {workList.map((w) => (
          <li class="work-list-item">
            <a class="work-link" href={w.link} aria-label={`Open case study: ${w.title}`}>
              <div class="work-link-left">
                <span class="work-title-small">{w.title}</span>
              </div>
              <div class="work-link-right">
                <svg class="chev" width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden>
                  <path d="M9 6l6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>

<style>
  :root {
    color-scheme: dark;
  }

  /* base page layout */
  .work-hero {
    width: 100%;
    padding: 3.5rem 1.5rem 1.5rem;
    background: transparent;
  }
  .work-hero-inner {
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
  }
  .work-title {
    font-size: 2.25rem;
    margin: 0 0 0.4rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text-color);
  }
  .work-lead {
    margin: 0;
    color: rgba(255,255,255,0.7);
    font-size: 1rem;
  }

  /* Dashboard */
  .dashboard-section {
    max-width: 1100px;
    margin: 2rem auto;
    padding: 0 1.5rem;
  }

  .dashboard {
    display: grid;
    grid-template-columns: 1fr 2px 1fr;
    gap: 1.5rem;
    align-items: start;
    background: rgba(255,255,255,0.03);
    border-radius: 14px;
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.06);
  }

  .panel {
    padding: 0.75rem 1rem;
  }

  .panel-title {
    font-size: 1.05rem;
    margin: 0 0 0.75rem;
    color: rgba(255,255,255,0.92);
    font-weight: 600;
  }

  .role-title {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0 0 0.15rem;
  }

  .role-company {
    color: rgba(255,255,255,0.75);
    margin: 0 0 0.25rem;
  }

  .role-time {
    color: rgba(255,255,255,0.6);
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
  }

  .role-bullets {
    margin: 0;
    padding-left: 1.1rem;
    color: rgba(255,255,255,0.85);
    line-height: 1.6;
    font-size: 0.98rem;
  }

  .dashboard-divider {
    width: 2px;
    background: linear-gradient(#ffffff10, #ffffff06);
    border-radius: 2px;
    align-self: stretch;
  }

  .past-list {
    margin: 0;
    padding: 0;
    list-style: none;
    color: rgba(255,255,255,0.9);
    line-height: 1.7;
    font-size: 0.98rem;
  }

  .past-list li {
    margin-bottom: 0.8rem;
  }

  .muted {
    display: inline-block;
    margin-left: 0.6rem;
    color: rgba(255,255,255,0.55);
    font-weight: 400;
    font-size: 0.9rem;
  }

  /* Work list */
  .work-list-section {
    max-width: 1100px;
    margin: 2.5rem auto;
    padding: 0 1.5rem 4rem;
  }

  .section-heading {
    margin: 0 0 1rem;
    font-size: 1.25rem;
    color: var(--text-color);
    font-weight: 600;
  }

  .work-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.85rem;
  }

  .work-list-item {
    margin: 0;
  }

  .work-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    text-decoration: none;
    padding: 1rem 1.15rem;
    border-radius: 12px;
    background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
    border: 1px solid rgba(255,255,255,0.04);
    color: var(--text-color);
    transition: transform 160ms ease, box-shadow 160ms ease, background 160ms ease;
    backdrop-filter: blur(6px);
  }

  .work-link:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.45);
    background: linear-gradient(180deg, rgba(255,255,255,0.04), rgba(255,255,255,0.02));
  }

  .work-title-small {
    font-weight: 600;
    font-size: 1rem;
  }

  .chev {
    color: rgba(255,255,255,0.7);
    opacity: 0.9;
  }

  /* smaller screens: stack dashboard columns */
  @media (max-width: 900px) {
    .dashboard {
      grid-template-columns: 1fr;
      padding: 1rem;
    }
    .dashboard-divider { display: none; }
  }

  @media (max-width: 520px) {
    .work-hero { padding-top: 2.5rem; }
    .work-title { font-size: 1.75rem; }
    .role-bullets { padding-left: 1rem; font-size: 0.95rem; }
    .work-link { padding: 0.9rem 1rem; }
  }
</style>
