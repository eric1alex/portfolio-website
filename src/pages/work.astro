---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Eric Alex | Work">
  <main>
    <section class="work-hero">
      
      <div class="hero-text-half">
        <h1>
          <span class="gradient-text">Showcasing my Work</span>
          <span class="gradient-text">and experience</span>
        </h1>
        <p class="hero-subtitle">How I Combine design and technology</p>
        
        <div class="scroll-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 5l0 14" />
            <path d="M18 13l-6 6l-6 -6" />
          </svg>
        </div>
      </div>

      <div class="hero-visual-half">
      </div>

    </section>

    <section class="project-grid-section">
      <div class="project-grid-header">
        <p class="section-label">selected projects</p>
        <h2 class="section-title">
          Discover my skills and creativity in action, with just one click.
        </h2>
      </div>

      <div class="project-grid">
        
        <a href="/tailwebs" class="project-card">
          <img src="/assets/tailwebs.png" alt="Spacious Living project thumbnail" />
          <h3 class="project-name">
            <span class="text-red">Tailwebs</span> Technology
          </h3>
          <div class="project-info">
            <span class="tag">Business Development</span>
            <span class="tag">Marketing</span>
            <span class="tag">Sales</span>
            <span class="view-link">
              View
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>

        <a href="/formi" class="project-card">
          <img src="/assets/formi.png" alt="Xpense project thumbnail" />
          <h3 class="project-name">Formi</h3>
          <div class="project-info">
            <span class="tag">Content Manager</span>
            <span class="tag">Marketing</span>
            <span class="tag">Video Editing</span>
            <span class="view-link">
              View
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>

      </div>
    </section>

  </main>
</Layout>

<style>
  /* NEW: Specific Red Color Class */
  .text-red {
    color: #fa1717; /* A nice vibrant red for dark mode */
  }

  /* Keyframe animation for the scroll icon */
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-8px);
    }
    60% {
      transform: translateY(-4px);
    }
  }

  .work-hero {
    display: flex;
    flex-direction: column; /* Mobile-first */
    height: 80vh; 
    overflow: hidden;
    border-bottom: 1px solid var(--border-color);
  }

  .hero-text-half {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    text-align: center; 
    padding: 2rem;
    flex-basis: 100%; 
    position: relative; 
  }

  .work-hero h1 {
    font-size: 2.8rem; 
    font-weight: 500;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    display: flex;
    flex-direction: column;
  }

  .gradient-text {
    background: linear-gradient(to bottom, #FFFFFF, #A0A0A0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: 1rem; 
    color: var(--light-text-color);
    margin: 0;
    font-weight: 400;
  }

  .scroll-icon {
    position: absolute;
    bottom: 3rem; 
    left: 50%;
    transform: translateX(-50%); 
    color: var(--light-text-color);
    opacity: 0.7;
    animation: bounce 2s infinite; 
  }
  
  .scroll-icon svg {
    width: 32px; 
    height: 32px;
  }

  .hero-visual-half {
    display: none; 
    background-color: #111;
    background-image: url('https://images.unsplash.com/photo-1499750310107-5fef28a66643?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); 
    background-size: cover;
    background-position: center;
    filter: grayscale(55%);
  }

  /* ================================== */
  /* PROJECT GRID STYLES                */
  /* ================================== */
  .project-grid-section {
    padding: 6rem 2.5rem; 
  }

  .project-grid-header {
    max-width: 600px; 
    margin-bottom: 4rem;
  }

  .section-label {
    font-size: 0.9rem;
    color: var(--light-text-color);
    margin: 0 0 1rem 0;
    text-transform: capitalize;
    letter-spacing: 0.05em;
  }

  .section-title {
    font-size: 2.8rem;
    font-weight: 500;
    color: var(--text-color);
    line-height: 1.3;
    margin: 0;
  }

  .project-grid {
    display: grid;
    /* CHANGED: 3 columns for desktop */
    grid-template-columns: repeat(3, 1fr); 
    gap: 1.5rem; 
  }

  .project-card {
    display: flex; 
    flex-direction: column;
    background-color: #222; 
    border: 1px solid var(--border-color);
    border-radius: 10px;
    overflow: hidden; 
    text-decoration: none;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: #555;
  }

  .project-card img {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16 / 10;
    object-fit: cover;
    background-color: #333; 
  }

  .project-name {
    font-size: 1.25rem; 
    font-weight: 500;
    color: var(--text-color);
    margin: 0;
    padding: 1.2rem 1.2rem 0.5rem 1.2rem; 
  }

  .project-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.2rem 1.2rem 1.2rem; 
    border-top: none; 
    margin-top: auto; 
    flex-wrap: wrap; 
  }

  .project-info .tag {
    font-size: 0.75rem; 
    color: var(--light-text-color);
    border: 1px solid var(--border-color);
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
    white-space: nowrap; 
  }

  .project-info .view-link {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-color);
    margin-left: auto; 
    white-space: nowrap;
  }

  .project-info .view-link svg {
    transition: transform 0.3s ease;
  }

  .project-card:hover .view-link svg {
    transform: translateX(4px);
  }


  /* ================================== */
  /* DESKTOP & MOBILE STYLES            */
  /* ================================== */
  
  /* Desktop Styles */
  @media (min-width: 769px) {
    .work-hero {
      flex-direction: row; 
    }

    .hero-text-half {
      flex-basis: 55%;
      height: 100%;
      text-align: left;
      align-items: flex-start;
      padding-left: 5%;
    }
    
    .hero-visual-half {
      display: block; 
      flex-basis: 45%;
      height: 100%;
    }

    .work-hero h1 {
      font-size: 4.5rem; 
    }

    .hero-subtitle {
      font-size: 1.25rem; 
    }
    
    .scroll-icon {
      left: 5%; 
      transform: none; 
    }
  }
  
  /* Mobile Styles */
  @media (max-width: 768px) {
    .project-grid-section {
      padding: 4rem 1.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .project-grid {
      grid-template-columns: 1fr; 
    }

    .project-name {
      padding: 1.2rem 1rem 0.5rem 1rem;
      font-size: 1.3rem;
    }

    .project-info {
      padding: 0.5rem 1rem 1.2rem 1rem; 
      gap: 0.75rem; 
      flex-wrap: wrap; 
    }

    .project-info .tag {
      font-size: 0.75rem; 
      padding: 0.2rem 0.6rem; 
      line-height: 1; 
      white-space: nowrap; 
    }

    .project-info .view-link {
      font-size: 0.8rem; 
    }
  }
</style>